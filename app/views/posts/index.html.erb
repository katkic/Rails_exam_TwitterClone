<h1>投稿一覧</h1>
<div class="container">
  <h2><%= notice %></h2>
  <% @posts.each do |post| %>
    <div class="posts-index-item">
      <p><%= link_to post.content, post_path(post.id) %></p>
      <p><%= post.created_at %></p>
    </div><!-- /.posts-index-item -->
  <% end %>
</div><!-- /.container -->