<!DOCTYPE html>
<html>
  <head>
    <title>Tsubuyaiter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="clearfix">
      <h1 class="header-logo"><%= link_to 'Tsubuyaiter', root_path %></h1>
      <ul class="header-menus">
        <li><%= link_to '投稿一覧', posts_path %></li>
        <li><%= link_to '新規作成', new_post_path, data: { turbolinks: false } %></li>
      </ul>
    </header>

    <%= yield %>
  </body>
</html>
